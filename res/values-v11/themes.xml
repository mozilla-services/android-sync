<!-- themes.xml is present in mobile/android/base/resources/values and
     is not owned by Android Sync.  We include this just so we can
     build the Android Sync APK without depending on Fennec.  See also
     drawable/icon.png. -->

<resources>

    <style name="Gecko" parent="@android:style/Theme.Holo">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Gecko.Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>

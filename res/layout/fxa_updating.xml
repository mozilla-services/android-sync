<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/FxAccountContainer" >

    <TextView
	style="@style/FxAccountTop"
	android:text="Updating" />

    <ScrollView
	style="@style/SyncMiddle"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp" >

        <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

            <TextView
		style="@style/FxAccountTextItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="60dp"
		android:gravity="center_horizontal"
		android:text="Firefox is updating your bookmarks, history, and saved passwords. This could take a few minutes." />

            <ProgressBar
		android:id="@+id/progressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:background="#11abf5"
		android:max="5"
		android:progress="3" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
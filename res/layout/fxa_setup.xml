<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/FxAccountContainer" >

	<LinearLayout style="@style/FxAccountMiddle" >

		<TextView
			style="@style/FxAccountTop"
			android:text="Firefox Account" />

		<TextView
			style="@style/FxAccountTextItem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="40dp"
			android:gravity="center_horizontal"
			android:text="To get started you&apos;ll need a Firefox Account. Creating one is quick and easy. Or if you already have an account, just log in." />

		<Button
			style="@style/FxAccountButton"
			android:layout_marginBottom="20dp"
			android:onClick="onCreateAccount"
			android:text="Create an account" />

		<Button
			style="@style/FxAccountButton"
			android:onClick="onLogIn"
			android:text="Log in" />
	</LinearLayout>

</ScrollView>